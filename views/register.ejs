<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
<style type="text/css">
    .container{
        font-family: 'Roboto',arial;
        background-color: whitesmoke;
    }
    .card{
       
        background-color: white;
        border-radius: 20px;
        transition: all 1s ease-in-out;
    }

    .input{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }


    .form-group{
        width: 80%;
        height: 50px;
        margin: 10px 10px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    

    .form-control{
        width: 100%;
        height: 100%;
        border-radius: 40px;
        border: 2px solid lightgrey;
        font-size: 16px;
        box-shadow: none;
        padding-left: 20px;
        cursor: pointer;
        outline: none;
    }

    .form-control:focus {
        outline: none;          
        border: 2px solid rgb(183, 0, 255);
        box-shadow: none;   
    }

    .form-control:hover{
        border: 2px solid rgb(183, 0, 255);
    }
    
    .btn{
        width: 80%;
        height: 60px;
        background: linear-gradient(-135deg,#c850c0 , #4185d0);
        color: white;
        border: 0;
        border-radius: 40px;
        font-size: 23px;
        font-weight: 700;
        cursor: pointer;
        margin-top: 50px;
    }

    .btn:hover{
        background: linear-gradient(-135deg,#ad27a4 , #1b5da4);
    }

    .btn:active{
        transform: translateY(4px);
    }
    .btn1{
    background: linear-gradient(-135deg,#c850c0 , #4185d0);
    color: white;
    position: absolute;
    font-size: 1.2rem;
    padding: 0.4rem 0.8rem;
    right: 25px;
    top: 25px;
    border-radius: 8px;
    border: none;
    /* transition: all 0.7s ease-in-out; */
    }

    

    .btn1:hover{
        text-decoration: none;
        background-color: rgba(246, 1, 1, 0.924);
        color: white;;
        
    }
    .btn1:active{
        background-color: #EB5757;
        /* box-shadow: 0 5px #666; */
        transform: translateY(4px);
    }

    .lead a{
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        font-weight: bold;
        color: #c850c0;
    }


</style>

<title>Register Page</title>
<body class="container">
    <a href="/" class="btn1">Home Page</a>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <% if(typeof errors != 'undefined'){ %>
                    <% errors.forEach(function(error){ %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <%= error.msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% }); %>
                <% } %>

                <% if(success_msg != ''){ %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <%= success_msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
            <% } %>

            <% if(error_msg != ''){ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
        <% } %>
                
                <form class="input"  action="/users/register" method="POST">
                    <div class="form-group">
                        <input 
                            type="name"
                            id="name"
                            name="name"
                            class="form-control"
                            placeholder="Enter Name"
                            value="<%= typeof name != 'undefined' ? name: '' %>"/>
                    </div>
                    <div class="form-group">
                        <input 
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email Address"
                            value="<%= typeof email != 'undefined' ? email: '' %>"/>
                    </div>
                    <div class="form-group">
                        <input 
                            type="password"
                            name="password"
                            id="password"
                            class="form-control"
                            placeholder="Create password"
                            value="<%= typeof password != 'undefined' ? password: '' %>"/>
                    </div>
                    <div class="form-group">
                        <input 
                            type="password"
                            name="password2"
                            id="password2"
                            class="form-control"
                            placeholder="Confirm password"
                            value="<%= typeof password != 'undefined' ? password: '' %>"/>
                    </div>
                    <button type="submit" class="btn btn-danger btn-block">Register</button>
                </form>
                <p class="lead mt-4">
                    Have an Account?
                    <a href="/users/login">Login</a>
                </p>
            </div>
        </div>
    </div>
</body>>
